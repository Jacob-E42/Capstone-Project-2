{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "http://example.com/journalEntry.json",
	"type": "object",
	"properties": {
		"user_id": {
			"type": "integer",
			"minimum": 1
		},
		"title": {
			"type": "string",
			"minLength": 1
		},
		"entry_text": {
			"type": "string",
			"minLength": 1
		},
		"entry_date": {
			"type": "string",
			"format": "date"
		},
		"emotions": {
			"type": "object",
			"additionalProperties": {
				"type": "string"
			}
		}
	},
	"required": ["user_id", "title", "entry_text", "entry_date"],
	"additionalProperties": false
}
