{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "http://example.com/journalEntry.json",
	"type": "object",
	"properties": {
		"id": {
			"type": "integer",
			"minimum": 1
		},
		"userId": {
			"type": "integer",
			"minimum": 1
		},
		"title": {
			"type": "string",
			"minLength": 1
		},
		"entryText": {
			"type": "string",
			"minLength": 1
		},
		"entryDate": {
			"type": "string",
			"minLength": 10
		},
		"emotions": {
			"type": ["object", "null"],
			"additionalProperties": {
				"type": "number",
				"minimum": 0,
				"maximum": 1
			}
		},

		"journalType": {
			"type": "string",
			"enum": [
				"Daily Journal",
				"Gratitude Journal",
				"Reflective Journal",
				"Stream-of-Consciousness Journal",
				"Bullet Journal",
				"Dream Journal"
			]
		}
	},
	"required": ["entryText", "userId", "title", "entryDate", "journalType"],
	"additionalProperties": false
}
